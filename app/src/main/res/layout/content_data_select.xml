<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="activity.DataSelectActivity"
    tools:showIn="@layout/activity_data_select">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="48dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="药物详情:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/drug_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/news_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/drug_content_s"
                android:layout_width="match_parent"
                android:layout_height="200dp"  />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">

                    <TextView
                        android:id="@+id/main_zhongxin"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="请选择剂量:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/main_zhongxin2"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/main_zhongxin"
                        android:text="  每日次数:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/main_zhongxin3"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/main_zhongxin2"
                        android:text="  每顿剂量:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <com.github.nukc.amountview.AmountView
                        android:id="@+id/drug_day_count"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignBottom="@+id/main_zhongxin2"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@+id/main_zhongxin2"
                        app:btnTextSize="14sp"
                        app:btnWidth="30dp"
                        app:tvWidth="50dp">

                    </com.github.nukc.amountview.AmountView>

                    <com.github.nukc.amountview.AmountView
                        android:id="@+id/drug_jiliang"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignBottom="@+id/main_zhongxin3"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toRightOf="@+id/main_zhongxin3"
                        app:btnTextSize="14sp"
                        app:btnWidth="30dp"
                        app:tvWidth="50dp">

                    </com.github.nukc.amountview.AmountView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLength="200"
                    android:background="@null"
                    android:hint="  如果需要备注的话请输入备注！"
                    android:maxLines="10" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal">

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_right"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/dp_64"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_right"
                    app:cb_color="@color/colorPrimary"
                    app:cb_pressedRingWidth="8dp" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_again"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:src="@drawable/ic_camera"
                    app:cb_color="@color/colorPrimary"
                    app:cb_pressedRingWidth="8dp" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_wrong"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_wrong"
                    app:cb_color="@color/colorPrimary"
                    app:cb_pressedRingWidth="8dp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
